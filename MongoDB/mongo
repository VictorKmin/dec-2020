             $ne: 2500 // !=
         }
    })


db.getCollection('teacher').find({
        class_curator: {
                $in: [7, 8, 9]
            }
    })


db.getCollection('teacher').find({
        class_curator: {
                $nin: [7, 8, 9]
            }
    })


db.getCollection('teacher').find({
        class_curator: {
            $not: {
                  $in: [7, 8, 9]
                }
            }
    })


