    { $set: { man: true } }
)


db.getCollection('teacher').update(
    { class_curator: { $gte: 3 } },
    { $set: { man: true } },
    { multi: true }
)

db.getCollection('teacher').updateMany(
    { class_curator: { $gte: 3 } },
    { $set: { man: true } }
)


db.getCollection('teacher').updateMany(
